@model Project.Net.Models.Plane

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-center my-4">Delete Plane</h1>

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
        <div class="card shadow-sm">
            <div class="card-body">
                <h4 class="card-title">Are you sure you want to delete this?</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-4">Capacity:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Capacity)</dd>
                    <dt class="col-sm-4">Manufacture Date:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.ManufactureDate)</dd>
                    <dt class="col-sm-4">Plane Type:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.PlaneType)</dd>
                </dl>

                <form asp-action="Delete" class="mt-4">
                    <input type="hidden" asp-for="PlaneId" />
                    <button type="submit" class="btn btn-danger mr-2">Delete</button>
                    <a href="#" class="btn btn-secondary" onclick="history.go(-1); return false;">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>